@model IEnumerable<TempLogger.Temperature>

@{
    ViewBag.Title = "Home Page";
}

<h2>@ViewBag.Message</h2>
@if (Model.Count() > 0)
{
    <table>
    <thead>
        <tr>
            <td>Date and time</td>
            <td>Temperature(C*)</td>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
        <td>@item.TimeStamp.ToLocalTime()</td>
        <td>@item.Value</td>
         </tr>
     }
    </tbody>
    </table>
}